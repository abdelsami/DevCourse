// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Course {
  id            String   @id @default(uuid())
  title         String
  ref           Int
  price         Float
  originalPrice Float
  description   String
  category      String
  level         String
  duration      String
  image         String?
  createdAt     DateTime @default(now())
}

model order {
  Id            String   @id @default(uuid())
  courseId      String
  fullName      String
  phone         String
  email         String
  notes         String
  paymentMethod String
  amount        Int
  status        String
  createdAt     DateTime @default(now())
}
